<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Trail List</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-info" asp-action="Upsert">
            <i class="fas fa-plus"></i>&nbsp;New National Park
        </a>
    </div>
</div>
<div class="border m-2 p-2">
    <table id="tblData" class="table table-active table-bordered table-striped">
        <thead>
            <tr>
                <th>National Park</th>
                <th>Trail Name</th>
                <th>Distance</th>
                <th>Elevation</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

@section scripts {
    <script src="~/js/trail.js"></script>
